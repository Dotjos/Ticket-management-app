<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - Ticketrax</title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Toastify -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>



  <style>
      @import url('https://fonts.googleapis.com/css2?family=Inconsolata:wght@200..900&display=swap');


      body{
        font-family: "Inconsolata", sans-serif;
        max-width: 1440px;
      }
      </style>  
</head>
<body class="bg-gray-50">

  <div class="max-w-[1440px] mx-auto p-6 mt-20">
    <header class="flex items-center justify-between mb-8">
      <h1 class="text-3xl font-bold text-deep-blue">Dashboard</h1>
      <button
        id="logoutBtn"
        class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition"
      >
        Logout
      </button>
    </header>

    <section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mt-8">
      <div class="bg-white shadow-md rounded-lg p-6">
        <h3 class="text-gray-700 font-semibold">Total Tickets</h3>
        <p id="totalTickets" class="text-2xl font-bold mt-2">0</p>
      </div>

      <div class="bg-green-100 shadow-md rounded-lg p-6">
        <h3 class="text-gray-700 font-semibold">Open</h3>
        <p id="openTickets" class="text-2xl font-bold mt-2 text-green-600">0</p>
      </div>

      <div class="bg-amber-100 shadow-md rounded-lg p-6">
        <h3 class="text-gray-700 font-semibold">In Progress</h3>
        <p id="inProgressTickets" class="text-2xl font-bold mt-2 text-amber-600">0</p>
      </div>

      <div class="bg-gray-100 shadow-md rounded-lg p-6">
        <h3 class="text-gray-700 font-semibold">Closed</h3>
        <p id="closedTickets" class="text-2xl font-bold mt-2 text-gray-600">0</p>
      </div>
    </section>

    <div class="mt-10">
      <button
        id="manageBtn"
        class="bg-blue-800 text-white px-5 py-3 rounded-full hover:bg-blue-700 transition"
      >
        Manage Tickets
      </button>
    </div>
  </div>

  <script>
    const SESSION_KEY = "ticketapp_session";
  const session = localStorage.getItem(SESSION_KEY);

  if (!session || session !== "mock_token") {
    // User is not logged in, redirect to login
    window.location.href = "?page=login";
  }

    const STORAGE_KEY = "ticketapp_tickets";

    function getTickets() {
      const data = localStorage.getItem(STORAGE_KEY);
      return data ? JSON.parse(data) : [];
    }

    function getTicketStats(tickets) {
      return {
        total: tickets.length,
        open: tickets.filter(t => t.status === "open").length,
        inProgress: tickets.filter(t => t.status === "in_progress").length,
        closed: tickets.filter(t => t.status === "closed").length
      };
    }

    // Populate dashboard
    const tickets = getTickets();
    const stats = getTicketStats(tickets);

    document.getElementById("totalTickets").textContent = stats.total;
    document.getElementById("openTickets").textContent = stats.open;
    document.getElementById("inProgressTickets").textContent = stats.inProgress;
    document.getElementById("closedTickets").textContent = stats.closed;

    // Logout
    document.getElementById("logoutBtn").addEventListener("click", () => {
      localStorage.removeItem("ticketapp_session");
      Toastify({
        text: "Logged out successfully!",
        duration: 2000,
        gravity: "top",
        position: "center",
        backgroundColor: "#ef4444"
      }).showToast();

      setTimeout(() => {
        window.location.href = "?page=login";
      }, 1000);
    });

    // Go to tickets
    document.getElementById("manageBtn").addEventListener("click", () => {
      window.location.href = "?page=tickets";
    });
  </script>
</body>
</html>
